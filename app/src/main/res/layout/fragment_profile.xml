<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.profile.ProfileFragment">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/profile_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_icon_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_skip_shape"
        android:elevation="4dp"
        android:padding="8dp"
        android:src="@drawable/arrow_left"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civUserName"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="-100dp"
        android:elevation="5dp"
        android:src="@drawable/profile_image_rest"
        app:civ_border_color="@color/white"
        app:civ_border_width="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sofia_pro_semi_bold_az"
        android:text="Eljad Eendaz"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/civUserName"
        app:layout_constraintStart_toStartOf="@+id/civUserName"
        app:layout_constraintTop_toBottomOf="@+id/civUserName" />

    <TextView
        android:id="@+id/tvEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/sofia_pro_regular_az"
        android:text="Edit Profile"
        android:textColor="#9796A1"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tvUserName"
        app:layout_constraintStart_toStartOf="@+id/tvUserName"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvEditProfile">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sofia_pro_regular_az"
            android:text="Full Name"
            android:textColor="@color/second_tx_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_design"
            android:elevation="2dp"
            android:fontFamily="@font/sofia_pro_semi_bold_az"
            android:paddingHorizontal="10dp"
            android:text="Ibrahim Alagamy"
            android:textColor="@color/black2"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sofia_pro_regular_az"
            android:text="Email"
            android:textColor="@color/second_tx_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_design"
            android:elevation="2dp"

            android:fontFamily="@font/sofia_pro_semi_bold_az"
            android:paddingHorizontal="10dp"
            android:text="Ibrahimalagamy@gamil.com"
            android:textColor="@color/black2"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sofia_pro_regular_az"
            android:text="Phone Number"
            android:textColor="@color/second_tx_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etMobile"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_design"
            android:elevation="2dp"
            android:fontFamily="@font/sofia_pro_semi_bold_az"

            android:paddingHorizontal="10dp"
            android:text="01026241542"
            android:textColor="@color/black2"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnSaveProfileInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_button_orange"
            android:elevation="30dp"
            android:fontFamily="@font/sofia_pro_semi_bold_az"
            android:text="Save"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>