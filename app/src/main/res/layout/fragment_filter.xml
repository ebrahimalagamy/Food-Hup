<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.filter.FilterFragment">


    <include
        android:id="@+id/toolBarFilter"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/toolBarFilter">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sofia_pro_semi_bold_az"
            android:text="Cuisines"
            android:textColor="@color/black2"
            android:textSize="18sp" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
            android:id="@+id/cards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:elevation="4dp"

            app:flexWrap="wrap">


            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/card1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:elevation="50dp"
                app:toggle_btnCornerRadius="30dp"
                app:toggle_iconGravity="center_vertical"
                app:toggle_iconPaddingRight="20dp"
                app:toggle_iconPaddingVertical="20dp"
                app:toggle_selectedBackgroundColor="@color/orange"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="Fast Food"
                app:toggle_textGravity="end|center_vertical"
                app:toggle_textSize="12sp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/card2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"

                app:toggle_btnCornerRadius="30dp"
                app:toggle_iconGravity="center_vertical"
                app:toggle_iconPaddingRight="20dp"
                app:toggle_iconPaddingVertical="20dp"
                app:toggle_selectedBackgroundColor="@color/orange"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="Breakfast"
                app:toggle_textGravity="end|center_vertical"
                app:toggle_textSize="12sp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/card3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                app:toggle_btnCornerRadius="30dp"

                app:toggle_iconGravity="center_vertical"
                app:toggle_iconPaddingRight="20dp"
                app:toggle_iconPaddingVertical="20dp"
                app:toggle_selectedBackgroundColor="@color/orange"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="Aisa"
                app:toggle_textGravity="end|center_vertical"
                app:toggle_textSize="12sp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/card4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                app:toggle_btnCornerRadius="30dp"

                app:toggle_iconGravity="center_vertical"
                app:toggle_iconPaddingRight="20dp"
                app:toggle_iconPaddingVertical="20dp"
                app:toggle_selectedBackgroundColor="@color/orange"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="Mexican"
                app:toggle_textGravity="end|center_vertical"
                app:toggle_textSize="12sp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/card5"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                app:toggle_btnCornerRadius="30dp"

                app:toggle_iconGravity="center_vertical"
                app:toggle_iconPaddingRight="20dp"
                app:toggle_iconPaddingVertical="20dp"
                app:toggle_selectedBackgroundColor="@color/orange"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="Pizza"
                app:toggle_textGravity="end|center_vertical"
                app:toggle_textSize="12sp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/card6"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                app:toggle_btnCornerRadius="30dp"
                app:toggle_iconGravity="center_vertical"
                app:toggle_iconPaddingRight="20dp"
                app:toggle_iconPaddingVertical="20dp"
                app:toggle_selectedBackgroundColor="@color/orange"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="Donat"
                app:toggle_textGravity="end|center_vertical"
                app:toggle_textSize="12sp" />


        </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sofia_pro_semi_bold_az"
            android:text="Short by"
            android:textColor="@color/black2"
            android:textSize="18sp" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
            android:id="@+id/cards2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:elevation="4dp"
            app:flexWrap="wrap"

            app:toggle_selectableAmount="2">


            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/card12"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"

                android:elevation="50dp"

                app:toggle_btnCornerRadius="30dp"
                app:toggle_iconGravity="center_vertical"
                app:toggle_iconPaddingRight="20dp"
                app:toggle_iconPaddingVertical="20dp"
                app:toggle_selectedBackgroundColor="@color/orange"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="Popular"
                app:toggle_textGravity="end|center_vertical"
                app:toggle_textSize="12sp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/card22"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"

                app:toggle_btnCornerRadius="30dp"
                app:toggle_iconGravity="center_vertical"
                app:toggle_iconPaddingRight="20dp"
                app:toggle_iconPaddingVertical="20dp"
                app:toggle_selectedBackgroundColor="@color/orange"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="Free Delivery"
                app:toggle_textGravity="end|center_vertical"
                app:toggle_textSize="12sp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/card32"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                app:toggle_btnCornerRadius="30dp"

                app:toggle_iconGravity="center_vertical"
                app:toggle_iconPaddingRight="20dp"
                app:toggle_iconPaddingVertical="20dp"
                app:toggle_selectedBackgroundColor="@color/orange"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="Nearest me "
                app:toggle_textGravity="end|center_vertical"
                app:toggle_textSize="12sp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/card42"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                app:toggle_btnCornerRadius="30dp"

                app:toggle_iconGravity="center_vertical"
                app:toggle_iconPaddingRight="20dp"
                app:toggle_iconPaddingVertical="20dp"
                app:toggle_selectedBackgroundColor="@color/orange"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="Cost low to high"
                app:toggle_textGravity="end|center_vertical"
                app:toggle_textSize="12sp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/card52"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                app:toggle_btnCornerRadius="30dp"

                app:toggle_iconGravity="center_vertical"
                app:toggle_iconPaddingRight="20dp"
                app:toggle_iconPaddingVertical="20dp"
                app:toggle_selectedBackgroundColor="@color/orange"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="Delivery time"
                app:toggle_textGravity="end|center_vertical"
                app:toggle_textSize="12sp" />

        </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sofia_pro_semi_bold_az"
            android:text="Rating"
            android:textColor="@color/black2"
            android:textSize="18sp" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
            android:id="@+id/cards23"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:elevation="4dp"
            app:flexWrap="wrap">


            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/card123"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                app:toggle_btnCornerRadius="30dp"
                app:toggle_icon="@drawable/ic_baseline_star_24"
                app:toggle_iconGravity="left|center_vertical"
                app:toggle_iconPaddingLeft="20dp"
                app:toggle_iconPaddingVertical="30dp"
                app:toggle_selectedBackgroundColor="@color/orange"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="5"
                app:toggle_textPaddingRight="30dp"
                app:toggle_textSize="14sp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/rate4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                app:toggle_btnCornerRadius="30dp"
                app:toggle_icon="@drawable/ic_baseline_star_24"
                app:toggle_iconGravity="left|center_vertical"
                app:toggle_iconPaddingLeft="20dp"
                app:toggle_iconPaddingVertical="30dp"
                app:toggle_selectedBackgroundColor="@color/orange"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="4"
                app:toggle_textPaddingRight="30dp"
                app:toggle_textSize="14sp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/rate3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                app:toggle_btnCornerRadius="30dp"
                app:toggle_icon="@drawable/ic_baseline_star_24"
                app:toggle_iconGravity="left|center_vertical"
                app:toggle_iconPaddingLeft="20dp"
                app:toggle_iconPaddingVertical="30dp"
                app:toggle_selectedBackgroundColor="@color/orange"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="3"
                app:toggle_textPaddingRight="30dp"
                app:toggle_textSize="14sp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/rate2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                app:toggle_btnCornerRadius="30dp"
                app:toggle_icon="@drawable/ic_baseline_star_24"
                app:toggle_iconGravity="left|center_vertical"
                app:toggle_iconPaddingLeft="20dp"
                app:toggle_iconPaddingVertical="30dp"
                app:toggle_selectedBackgroundColor="@color/orange"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="2"
                app:toggle_textPaddingRight="30dp"
                app:toggle_textSize="14sp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/rate1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                app:toggle_btnCornerRadius="30dp"
                app:toggle_icon="@drawable/ic_baseline_star_24"
                app:toggle_iconGravity="left|center_vertical"
                app:toggle_iconPaddingLeft="20dp"
                app:toggle_iconPaddingVertical="30dp"
                app:toggle_selectedBackgroundColor="@color/orange"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="1"
                app:toggle_textPaddingRight="30dp"
                app:toggle_textSize="14sp" />

        </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnCancelOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_button_orange_stroke"
                android:elevation="20dp"
                android:text="RESET"
                android:textAllCaps="false"
                android:textColor="@color/orange" />

            <Button
                android:id="@+id/btnTrackOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_button_orange"
                android:elevation="20dp"

                android:text="APPLLY"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>